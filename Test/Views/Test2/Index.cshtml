@model Test.Models.OrderDetail

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h2 class="">Add New Product</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>
                <div class="form-group">
                    @Html.Label("Catagory", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select class="form-control" id="productCategory" onchange="LoadProduct(this)">
                            <option selected value="">-Select Catagori-</option>
                        </select>
                    </div>
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.Label("Product", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select class="form-control" id="product"> 
                            <option selected value="">-Select Product-</option>
                        </select>
                    </div>
                </div>
            </td>

            <td>
                <div class="form-group">
                    @Html.Label("Rate", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="number" placeholder="Rate" id="rate" />
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    @Html.Label("Quantity", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="number" placeholder="quantity" id="quantity" />
                    </div>
                </div>
            </td>

            <td>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="button" class="form-control btn btn-default add-record" value="Add Row" />
                    </div>
                </div>
            </td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<h3></h3>



<h2 class="">Product Wise Mill Grid</h2>
